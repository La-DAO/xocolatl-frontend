{
  "git": {
    "commitMessage": "release: v${version}",
    "requireCleanWorkingDir": false
  },
  "npm": {
    "publish": false,
    "skipChecks": true
  },
  "github": {
    "release": true,
    "draft": true,
    "autoGenerate": true,
    "assets": ["*.gz"]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}
